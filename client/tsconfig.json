{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
    "paths": {
      "@gql": ["graphql/index.ts"],
      "@apollo": ["lib/apollo/index.ts"],
      "@auth": ["lib/auth/index.ts"],
      "@styles": ["lib/styles/index.ts"],
      "@utils": ["lib/utils/index.ts"],
      "@views": ["lib/views/index.tsx"],
      "@layout": ["lib/layout/index.tsx"],
      "@helpers": ["lib/helpers/index.ts"],
      "@form": ["lib/form/types.ts"],
      "@components": ["lib/components/index.tsx"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
